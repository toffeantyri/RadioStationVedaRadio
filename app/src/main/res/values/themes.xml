<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">#FFFFFF</item>
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.RadioStationVedaRadio</item>
    </style>

    <style name="Theme.RadioStationVedaRadio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_200</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>


    <style name="text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:fontFamily">@font/romic</item>
        <item name="android:textColor">@color/green_900</item>
    </style>

    <style name="favorite_filter_spinner" parent="android:Widget.Material.Spinner">
        <item name="android:background">@drawable/rectangle_r10</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="MainToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="popUpToolbar" parent="MainToolbarStyle">
        <item name="android:background">@drawable/shape_rectangle_r10</item>
        <item name="popupMenuBackground">@android:color/transparent</item>
    </style>

    <style name="MyCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="cardElevation">10dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="reverse_tint_text" parent="Theme.RadioStationVedaRadio">
        <item name="android:textColor">@color/green_900</item>
    </style>

    <style name="progressBarBlue" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/blue_500</item>

    </style>


</resources>