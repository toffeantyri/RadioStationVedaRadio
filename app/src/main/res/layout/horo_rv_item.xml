<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/MyCardViewStyle"
    tools:cardBackgroundColor="@color/green_100">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_logo_zodiac"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:src="@drawable/ic_bookmark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_name_zodiac"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:padding="10dp"
            android:text="Водолей"
            android:textColor="@color/green_900"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/iv_logo_zodiac"
            app:layout_constraintStart_toEndOf="@id/iv_logo_zodiac"
            app:layout_constraintTop_toTopOf="@id/iv_logo_zodiac" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/iv_logo_zodiac"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/green_200"
            android:gravity="end"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_descr_zodiac"
            style="@style/text_style"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo_zodiac"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="харе кришна харе кришна
            харе кришна харе кришна харе кришна
            харе кришна харе кришна харе кришна
            харе кришна харе кришна харе кришна
            харе кришна харе кришна харе кришна
            харе кришна харе кришна харе кришна
            харе кришна харе кришна харе кришна " />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>